<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<TextView
 android:text="@string/mediafile_prompt"
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 >
</TextView>

<Spinner android:id="@+id/SpinnerMediaFileList"
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 >
</Spinner>

<Button android:id="@+id/ButtonLaunchVideo"
 android:text="@string/button_launchvideo"
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 >
</Button>

<Button android:id="@+id/ButtonLaunchStream"
 android:text="@string/button_launchstream"
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 >
</Button>

<CheckBox android:id="@+id/cb_animated"
 android:text="@string/cb_animated"
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
/>
</LinearLayout>
